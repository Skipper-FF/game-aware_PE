<div class="container-index">
<p class="button-add">Add a comment</p>
  <div class="list-options <%= 'expanded' if @user_review.game %>">
    <%= simple_form_for [@game, @user_review] do |f| %>
    <%= f.input :age, collection: 0..18 %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit'Post your comment', class: "btn btn-success" %>
  <% end %>
  </div>
</div>
